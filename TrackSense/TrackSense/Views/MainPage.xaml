<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackSense.Views.MainPage"
             xmlns:model="clr-namespace:TrackSense.Models"
             xmlns:viewmodel="clr-namespace:TrackSense.ViewModels"
             Title="Accueil"
             x:DataType="viewmodel:MainPageViewModel">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="TrackSense"
                     Order="Primary"
                     Command="{Binding GoToTrackSenseDevicesCommand}"/>
        <ToolbarItem Text="Paramètres"
                     Order="Primary"
                     IconImageSource="settings.svg"/>
    </ContentPage.ToolbarItems>
    <Grid RowDefinitions="*,Auto">
        <Grid Grid.Row="1"
              ColumnDefinitions="*,*">
            <Button Text="Simuler trajet"
                    Command="{Binding SimulateRideReceptionCommand}"/>
            <Button Grid.Column="1"
                    Text="Simuler points"
                    Command="{Binding SimulatePointsReceptionCommand}"
                    BackgroundColor="Green"/>
        </Grid>
    </Grid>

</ContentPage>
